{
  "DbConnection": "Host=localhost;Port=5433;Database=VinylShop;Username=postgres;Password=postgres",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "MongoDBBson",
        "Args": {
          "databaseUrl": "mongodb://localhost:27017/VinylRecordsLogs",
          "collectionName": "Buiseness",
          "cappedMaxSizeMb": "50",
          "cappedMaxDocuments": "10000"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
